#!/bin/sh
# suckless and useless fetch
# uptime breaks after 1 day, arch breaks constantly anyway amirite

os="endeavour"
wm="bspwm"
pm="$(pacman -Qq | wc -l)"
tm="st"
br="vivaldi"
up="$(uptime | awk '{print $3}' | tr ',' ' ')"
mm=$(free -m | sed -n 's/^Mem:\s\+[0-9]\+\s\+\([0-9]\+\)\s.\+/\1/p')
mm_total=$(free -m | awk '/^Mem:/ {print $2}')

c0='[0m'
c1='[31m'
c2='[34m'
c3='[33m'
c4='[32m'
c5='[36m'
c6='[35m'
c7=$(tput setaf 3)

bold=$(tput bold)
normal=$(tput sgr0)

cat <<-EOF
â€¢ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ 

   ${bold}${c1}os${normal}  âœ¦  ${os}
   ${bold}${c2}wm${normal}  âœ¦  ${wm}
   ${bold}${c3}pm${normal}  âœ¦  ${pm} (bloat)
   ${bold}${c4}br${normal}  âœ¦  ${br}
   ${bold}${c5}up${normal}  âœ¦  ${up}
   ${bold}${c6}tm${normal}  âœ¦  ${tm}
   ${bold}${c7}mm${normal}  âœ¦  ${mm}/${mm_total} MiB

â€¢ ~ ~ ~ ~ ~ ~ ~ ðŸŒ»ðŸŒ»ðŸŒ»ðŸŒ»ðŸŒ»
${c0}
EOF

#cat <<-EOF
